{
  "@context": [
    "https://www.w3.org/2019/wot/td/v1",
    {
      "saref": "https://w3id.org/saref#"
    }
  ],
  "title": "ESP32 Environmental Monitor",
  "id": "urn:dev:ops:esp32-sensor-001",
  "description": "ESP32-based WoT device with temperature, humidity, motion, and interaction capabilities.",
  "security": ["nosec_sc"],
  "securityDefinitions": {
    "nosec_sc": {
      "scheme": "nosec"
    }
  },
  "properties": {
    "temperature": {
      "type": "number",
      "unit": "degree celsius",
      "readOnly": true,
      "forms": [{
        "href": "mqtt://<broker>/esp32/temperature",
        "contentType": "application/json"
      }]
    },
    "humidity": {
      "type": "number",
      "unit": "percent",
      "readOnly": true,
      "forms": [{
        "href": "mqtt://<broker>/esp32/humidity",
        "contentType": "application/json"
      }]
    },
    "acceleration": {
      "type": "object",
      "readOnly": true,
      "properties": {
        "x": {"type": "integer"},
        "y": {"type": "integer"},
        "z": {"type": "integer"}
      },
      "forms": [{
        "href": "mqtt://<broker>/esp32/acceleration",
        "contentType": "application/json"
      }]
    },
    "gyroscope": {
      "type": "object",
      "readOnly": true,
      "properties": {
        "x": {"type": "integer"},
        "y": {"type": "integer"},
        "z": {"type": "integer"}
      },
      "forms": [{
        "href": "mqtt://<broker>/esp32/gyroscope",
        "contentType": "application/json"
      }]
    }
  },
  "actions": {
    "toggleLed": {
      "description": "Turn on/off the LED",
      "input": { "type": "boolean" },
      "forms": [{
        "href": "mqtt://<broker>/esp32/led",
        "contentType": "application/json"
      }]
    }
  },
  "events": {
    "motionAlert": {
      "description": "Triggered when motion is detected",
      "data": { "type": "boolean" },
      "forms": [{
        "href": "mqtt://<broker>/esp32/motion",
        "contentType": "application/json"
      }]
    },
    "climateAlert": {
      "description": "Triggered when temperature or humidity is out of range",
      "data": { "type": "boolean" },
      "forms": [{
        "href": "mqtt://<broker>/esp32/climate",
        "contentType": "application/json"
      }]
    },
    "buttonPressed": {
      "description": "Button pressed event",
      "data": { "type": "boolean" },
      "forms": [{
        "href": "mqtt://<broker>/esp32/button",
        "contentType": "application/json"
      }]
    }
  }
}
