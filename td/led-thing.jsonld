{
  "@context": ["https://www.w3.org/2019/wot/td/v1", { "@language": "en" }],
  "title": "LED Actuator",
  "description": "Thing Description for MQTT-based LED",
  "id": "urn:dev:wot:led",
  "base": "mqtt://192.168.1.241",
  "securityDefinitions": {
    "oauth2_auth": {
      "scheme": "oauth2",
      "flow": "client",
      "token": "http://localhost:3000/token",
      "scopes": ["default"]
    }
  },
  "security": ["oauth2_auth"],
  "properties": {
    "state": {
      "type": "boolean",
      "readOnly": false,
      "writeOnly": false,
      "forms": [
        {
          "href": "/actuator/led",
          "contentType": "application/json",
          "op": ["readproperty", "writeproperty"],
          "subprotocol": "mqtt",
          "security": ["oauth2_auth"]
        }
      ]
    }
  }
}
