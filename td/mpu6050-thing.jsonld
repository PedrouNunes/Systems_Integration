{
  "@context": ["https://www.w3.org/2019/wot/td/v1", { "@language": "en" }],
  "title": "MPU6050 Sensor",
  "id": "urn:dev:wot:mpu6050",
  "securityDefinitions": {
    "oauth2_auth": {
      "scheme": "oauth2",
      "flow": "client",
      "token": "http://localhost:3000/token",
      "scopes": ["default"]
    }
  },
  "security": ["oauth2_auth"],
  "properties": {
    "acceleration": {
      "type": "object",
      "readOnly": true,
      "properties": {
        "AcX": { "type": "integer" },
        "AcY": { "type": "integer" },
        "AcZ": { "type": "integer" }
      },
      "forms": [
        {
          "href": "mqtt://192.168.1.241/sensor/motion",
          "contentType": "application/json",
          "op": "readproperty",
          "security": ["oauth2_auth"]
        }
      ]
    }
  },
  "events": {
    "motionAlert": {
      "data": { "type": "boolean" },
      "forms": [
        {
          "href": "mqtt://192.168.1.241/alert/motion",
          "subprotocol": "mqtt",
          "contentType": "application/json",
          "op": "subscribeevent",
          "security": ["oauth2_auth"]
        }
      ]
    }
  }
}
